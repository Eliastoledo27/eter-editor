{
  "version": 2,
  "name": "eter-tienda-online",
  "builds": [
    {
      "src": "tienda/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/tienda/index.html"
    },
    {
      "src": "/estilos.css",
      "dest": "/tienda/estilos.css"
    },
    {
      "src": "/(.*)",
      "dest": "/tienda/$1"
    }
  ],
  "outputDirectory": "tienda",
  "public": true,
  "functions": {},
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 